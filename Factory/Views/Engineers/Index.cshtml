@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added to the roster yet</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EnginnerId })</li>
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Add New Engineer", "Create")</p>
</div>